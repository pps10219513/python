pipeline {
    agent any

    // 1) Disparador: cada vez que haya un push a cualquier rama
    triggers {
        // Si tienes el plugin GitHub, usa githubPush()
        githubPush()
        // Alternativa genérica con polling (p.ej. cada 5 minutos):
        // pollSCM('H/5 * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                // Clona el repositorio
                checkout scm
            }
        }

        stage('Prepare') {
            steps {
                // Python no se compila, pero podemos crear un entorno virtual
                sh 'python3 -m venv venv'
                sh '. venv/bin/activate'
                // Si tuvieras requirements:
                // sh 'pip install -r requirements.txt'
            }
        }

        stage('Run Tests') {
            steps {
                // Ejecuta los tests unitarios
                sh '''
                   . venv/bin/activate
                   python -m unittest discover -v
                '''
            }
        }
    }

    post {
        success {
            echo "✅ Todos los tests pasaron correctamente."
        }
        failure {
            echo "❌ Alguna etapa ha fallado. Revisa los logs de Jenkins."
        }
    }
}

